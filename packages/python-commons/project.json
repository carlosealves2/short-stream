{
  "name": "python-commons",
  "sourceRoot": "packages/python-commons",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --extra dev pytest || [ $? -eq 5 ] && echo 'No tests found' || exit $?",
        "cwd": "packages/python-commons"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --extra dev ruff check .",
        "cwd": "packages/python-commons"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run black .",
        "cwd": "packages/python-commons"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --extra dev mypy .",
        "cwd": "packages/python-commons"
      }
    }
  },
  "tags": ["type:lib", "lang:python", "scope:shared"]
}
