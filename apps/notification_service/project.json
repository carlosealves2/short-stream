{
  "name": "notification-service",
  "sourceRoot": "apps/notification_service",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/notification_service"],
      "options": {
        "command": "go build -o ../../dist/apps/notification_service/main ./cmd",
        "cwd": "apps/notification_service"
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ -n \"$(find . -name '*.go' -not -path './vendor/*' | head -1)\" ]; then go test ./... -v -coverprofile=coverage.out; else echo 'No Go files found, skipping tests'; fi",
        "cwd": "apps/notification_service"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ -n \"$(find . -name '*.go' -not -path './vendor/*' | head -1)\" ]; then golangci-lint run ./...; else echo 'No Go files found, skipping lint'; fi",
        "cwd": "apps/notification_service"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd",
        "cwd": "apps/notification_service"
      },
      "dependsOn": ["^build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t short-stream/notification-service:latest .",
        "cwd": "apps/notification_service"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["type:app", "lang:go", "scope:notification"],
  "implicitDependencies": ["go-commons"]
}